<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="15" Grid.ColumnSpan="2">
            <TextBox x:Name="nameTextBox" Margin="0, 0, 0, 5"/>
            <TextBox x:Name="emailTextBox" Margin="0, 0, 0, 5"/>
            <TextBox x:Name="phoneNumberTextBox" Margin="0, 0, 0, 5"/>
            <Button Content="Update" x:Name="UpdateButton" Click="UpdateButton_OnClick" Margin="5, 5, 5, 5" Height="40"/>
            <Button Content="Delete" x:Name="DeleteButton" Click="DeleteButton_OnClick" Background="Red" Foreground="Wheat" Margin="5, 5, 5, 5" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
